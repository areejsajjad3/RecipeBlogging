<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapscdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>
        <%= title %>
    </title>
</head>
<style>
    body {
        background-image: url("http://ashaval.com/wp-content/uploads/2020/09/Tastemaker.jpg");
        background-size: cover;
        background-position: center;
        width: 100%;
        height: 100%;
    }
    
    .table {
        color: rgb(128, 116, 13);
        font-weight: bold;
        background: rgba(0, 0, 0, 0.6);
    }
    
    h1 {
        color: rgb(248, 213, 11);
        font-size: 71px;
        font-weight: bold;
        text-transform: uppercase;
        margin: 0;
    }
    
    h2 {
        color: white;
        font-size: 45px;
        font-weight: bold;
        text-transform: uppercase;
        margin: 0;
    }
    
    h2 span {
        color: #f4c613;
        font-weight: 700;
    }
    
    .adjust {
        padding-left: 550px;
        text-align: center;
    }
    
    .my {
        padding-right: 3%;
    }
</style>

<body>
    <div class="container">
        <br>
        <br>

        <h1>
            <%= title %>
        </h1>
        <div class="adjust">
            <div id="home-btn">

                <a class="btn btn-danger text-white " role="button" href="/">Go to home</a>

                <a class="btn btn-danger text-white " role="button" href="/createrecipe">Create Another Recipe</a>

            </div>
        </div>
        <br>

        <table class="table table-hover">

            <thead>
                <tr>
                    <th>Name of recipe</th>
                    <th>Ingredient 1</th>
                    <th>Ingredient 2</th>
                    <th>Ingredient 3</th>
                    <th>Ingredient 4</th>
                    <th>Ingredient 5</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <% recipestructures.forEach((row)=>{ %>
                <tr>
                    <td>
                        <%- row.name %>
                    </td>
                    <td>
                        <%- row.Ingredient1 %>
                    </td>
                    <td>
                        <%- row.Ingredient2 %>
                    </td>
                    <td>
                        <%- row.Ingredient3 %>
                    </td>
                    <td>
                        <%- row.Ingredient4 %>
                    </td>
                    <td>
                        <%- row.Ingredient5 %>
                    </td>
                    <td>
                        <a class="btn btn-success" href="/edit/<%= row._id %>">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" href="/delete/<%= row._id %>">Delete</a>
                    </td>
                </tr>
                <% }); %>

        </table>

        <a href="/">Go back </a>
    </div>
</body>

</html>